<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DeleteRecipeFragment">

    <TextView
        android:id="@+id/delete_recipe_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"
        android:text="Delete the recipe?"
        android:fontFamily="@font/nunito"
        android:textColor="@color/red_900"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/delete_recipe_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/delete_recipe_yes_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:paddingHorizontal="36dp"
            android:src="@drawable/ic_baseline_done_24"
            android:background="@drawable/custom_yes_button"
            android:layout_margin="12dp"/>

        <ImageButton
            android:id="@+id/delete_recipe_no_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:paddingHorizontal="36dp"
            android:src="@drawable/ic_baseline_clear_24"
            android:background="@drawable/custom_no_button"
            android:layout_margin="12dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>