<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.storage.PickUnitActivity"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pick_a_unit_headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/pick_a_unit_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintVertical_chainStyle="packed">

        <TextView
            android:id="@+id/pick_a_unit_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/pick_a_unit"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3.SnackNTrack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/pick_unit_add_button"/>
        <ImageButton
            android:id="@+id/pick_unit_add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/pick_a_unit_title"
            app:layout_constraintEnd_toStartOf="@id/pick_unit_back_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_baseline_add_24"
            android:background="@drawable/custom_image_button"
            android:padding="12dp"
            android:contentDescription="@string/add_a_unit"
            android:layout_marginEnd="8dp"
            />
        <ImageButton
            android:id="@+id/pick_unit_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/pick_unit_add_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:background="@drawable/custom_image_button"
            android:padding="12dp"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/back"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pick_a_unit_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pick_a_unit_headline"
        app:layout_constraintBottom_toTopOf="@id/pick_a_unit_confirm_button"
        android:layout_marginTop="32dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    <ImageButton
        android:id="@+id/pick_a_unit_confirm_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_done_24"
        android:background="@drawable/custom_yes_button"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pick_a_unit_list"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/confirm_unit"
        />

</androidx.constraintlayout.widget.ConstraintLayout>