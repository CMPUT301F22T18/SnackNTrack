        <item name="textAppearanceBody1">@style/TextAppearance.MaterialComponents.Body1.SnackNTrack</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MaterialComponents.Body2.SnackNTrack</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MaterialComponents.Caption.SnackNTrack</item>
        <item name="textAppearanceButton">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.MaterialComponents.Overline</item>

        <item name="floatingActionButtonStyle">@style/Widget.SnackNTrack.FloatingActionButton</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.SnackNTrack.SmallComponent</item>
        <item name="materialCardViewStyle">@style/Widget.SnackNTrack.CardView</item>
